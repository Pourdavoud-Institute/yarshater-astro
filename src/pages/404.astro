---
import BaseLayout from '@layouts/BaseLayout.astro';

const title = 'Page Not Found';
const message = 'This page doesnâ€™t exist or the content has been moved.';
---

<BaseLayout og={undefined} seo={undefined} title={title}>
    <main
        class="page footer-margin"
        data-template="404"
        id="main-content"
        tabindex="-1"
    >
        <div class="content-wrapper">
            <header class="text-center | flow" data-tempo="allegro">
                <h1>{title}</h1>
                <p>{message}</p>
                <a class="button-link" data-style="primary" href="/"
                    >Back to Home</a
                >
            </header>
            <div class="image-wrapper">
                <img
                    alt=""
                    decoding="auto"
                    loading="eager"
                    src="/images/logos/pourdavoud-seal-web.svg"
                    width="400"
                />
            </div>
        </div>
    </main>
</BaseLayout>

<style>
    header {
        margin-block-start: var(--space-2xl);

        & p {
            font-size: var(--step-1);
        }
    }

    .button-link {
        --flow-space: var(--space-l);
    }

    .image-wrapper {
        position: absolute;
        top: -2rem;
        left: 50%;
        z-index: -1;
        opacity: 0.15;
        max-width: 22rem;
        transform: translateX(-50%);
    }
</style>
