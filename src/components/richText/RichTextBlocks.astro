---
import { PortableText } from 'astro-portabletext';
import type { PortableTextProps } from 'astro-portabletext/types';
import RichTextBlock from './RichTextBlock.astro';
import RichTextBreak from './RichTextBreak.astro';
import RichTextImage from './RichTextImage.astro';
import RichTextLink from './RichTextLink.astro';
import RichTextLinkGroup from './RichTextLinkGroup.astro';

interface Props {
    blocks: any[];
}

const { blocks } = Astro.props;

const components: PortableTextProps['components'] = {
    block: RichTextBlock,
    type: {
        break: RichTextBreak,
        linkGroup: RichTextLinkGroup,
        richTextImage: RichTextImage,
    },
    mark: {
        richTextLink: RichTextLink,
    },
};
---

<PortableText components={components} value={blocks} />
