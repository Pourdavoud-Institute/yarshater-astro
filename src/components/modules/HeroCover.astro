---
import type { HeroCover } from '@content/schemaFragments/pageModules';
import SanityImage from '@components/SanityImage.astro';

interface Props {
    module: HeroCover;
}

const { module } = Astro.props;
---

<div data-module={module._type}>
    <header>
        <div class="content-wrapper">
            <div class="text-wrapper">
                <h1 class="mega-title boxed">{module.heading}</h1>
                <div class="scroll-link">
                    <a
                        class="button-link"
                        data-style="white"
                        href={module.cta[0]?.href}
                    >
                        <span class="small-title">{module.cta[0]?.label}</span>
                    </a>
                </div>
            </div>
        </div>
    </header>
    <SanityImage
        alt={module.image.alt}
        aspectRatio={[16, 9]}
        classes="cover-image"
        loading="eager"
        quality={70}
        source={module.image}
        width={1600}
    />
</div>

<style>
    [data-module='heroCover'] {
        position: relative;
        background-color: var(--ucla-primary-blue);

        & header {
            position: relative;
            overflow-y: hidden;
        }

        & .content-wrapper {
            height: 100dvh;
            display: flex;
            flex-direction: column;
            gap: 1rem;
            align-items: center;
            justify-content: center;
            z-index: 2;
            padding-block-start: calc(var(--space-l) + var(--header-height));
            padding-block-end: var(--space-2xl);
        }

        & .text-wrapper {
            max-width: 60%;
            text-align: center;
        }

        & .yarshater-seal {
            fill: var(--ucla-white);
            width: 10rem;
        }

        & .scroll-link {
            position: relative;

            &::after {
                content: '';
                position: absolute;
                top: 7rem;
                left: 50%;
                transform: translateX(-50%);
                width: 1px;
                height: 200px;
                background-color: var(--ucla-white);
                opacity: 0.45;
            }

            & a {
                margin-block-start: var(--space-m);
                margin-inline: auto;

                &:hover {
                    & svg {
                        transform: scale(1.3);
                    }
                }
            }

            & svg {
                width: 2rem;
                height: 2rem;
                fill: var(--ucla-white);
                transition: transform 0.3s;
            }
        }

        & .cover-image {
            position: absolute;
            z-index: 0;
            top: 0;
            object-fit: cover;
            width: 100%;
            height: 100%;
            opacity: 0.65;
            filter: grayscale(1);
            mix-blend-mode: multiply;
        }
    }

    @media screen and (max-width: 1024px) {
        [data-module='heroCover'] {
            & .text-wrapper {
                max-width: none;
            }
        }
    }

    @media screen and (max-width: 450px) {
        [data-module='heroCover'] {
            & h1.boxed {
                padding-inline: var(--space-xs);
                line-height: 1.35;
            }
        }
    }
</style>
